---
import Layout from "../layouts/Layout.astro";
import Logo from "@images/logo.png";
import Linkedin from "@images/external-logo/linkedin.svg";
import Github from "@images/external-logo/github.svg";

const languages = [
  {
    name: "HTML",
    icon: "html5.svg",
    lvl: 8,
  },
  {
    name: "CSS",
    icon: "css3.svg",
    lvl: 4,
  },
  {
    name: "JavaScript",
    icon: "javascript.svg",
    lvl: 7,
  },
  {
    name: "TypeScript",
    icon: "typescript.svg",
    lvl: 6,
  },
  {
    name: "Angular",
    icon: "angularjs.svg",
    lvl: 6,
  },
  {
    name: "C#",
    icon: "csharp.svg",
    lvl: 5,
  },
  {
    name: "Xamarin",
    icon: "xamarin.svg",
    lvl: 5,
  },
  {
    name: ".NET",
    icon: "dotnet.svg",
    lvl: 5,
  },
  {
    name: "PHP",
    icon: "php.svg",
    lvl: 8,
  },
  {
    name: "Laravel",
    icon: "laravel.svg",
    lvl: 7,
  },
  {
    name: "Bootstrap",
    icon: "bootstrap.svg",
    lvl: 8,
  },
  {
    name: "Tailwind",
    icon: "tailwindcss.svg",
    lvl: 6,
  },
];
---

<Layout title="Carlos Valderas">
  <div class="flex flex-col md:flex-row gap-x-20 items-center gap-y-10">
    <img
      src={Logo}
      alt="Logo"
      class="w-40 lg:w-60 rounded-full border-2 border-cyan-400"
    />

    <div class="h-full w-full text-center md:text-left">
      <h1 class="text-2xl sm:text-2xl md:text-4xl font-bold text-cyan-400">
        Carlos Valderas
      </h1>

      <h2 class="text-md md:text-xl font-bold pb-4 text-cyan-400/60">
        Desarrollador Web
      </h2>

      <div class="flex gap-x-2 justify-center md:justify-start">
        <span class="w-5 lg:w-7">
          <a
            href="
		  https://www.linkedin.com/in/carlos-valderas-716785202/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-2xl font-bold"
          >
            <img src={Linkedin} alt="Linkedin" />
          </a>
        </span>
        <span class="w-5 lg:w-7">
          <a
            href="https://github.com/cvalderas"
            target="_blank"
            rel="noopener noreferrer"
            class="text-2xl font-bold"
          >
            <img src={Github} alt="Github" />
          </a>
        </span>
      </div>
    </div>
  </div>

  <div class="mt-28">
    <h2
      class="text-xl md:text-3xl text-center md:text-start font-bold text-cyan-400/80 uppercase"
    >
      hard skills
    </h2>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3 mt-4 "
    >
      {
        languages.map(({ name, icon, lvl }) => (
          <div class="bg-cyan-800 p-4 rounded-lg flex gap-x-4">
            <img src={`./images/logo-lang/${icon}`} alt={name} class="w-12" />
            <div class="flex flex-col w-full">
              <p class="text-cyan-400 text-start">{name}</p>

              <div class="w-full">
                <div class="mb-1 text-end">
                  <span class="text-sm text-end font-medium text-blue-700 dark:text-white">
                    {lvl >= 8 && "Senior"}
                    {lvl >= 5 && lvl < 8 && "Semi Senior"}
                    {lvl < 5 && "Junior"}
                  </span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                  <div
                    class="bg-cyan-400 h-2.5 rounded-full"
                    style={`width: ${lvl * 10}%`}
                  />
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
